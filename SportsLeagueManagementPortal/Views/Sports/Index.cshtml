@model IEnumerable<SportsLeagueManagementPortal.Models.Sport>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <button type="button" id="btn-new-sport" class="btn btn-primary" data-toggle="modal" data-target="#new-sport-modal">New Sport</button>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sport in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => sport.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => sport.Type)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@sport.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@sport.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@sport.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="modal fade" id="new-sport-modal" tabindex="-1" role="dialog" aria-labelledby="new-sport-modal-label" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <form asp-action="Create" method="post">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="new-sport-modal-label">New Sport</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label class="control-label">Name</label>
                        <input type="text" class="form-control" id="sport-name" />

                        <label class="control-label" for="sport-type">Type</label>
                        <select>
                            <option selected>Team</option>
                            <option>Individual</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary" data-dismiss="modal">Create</button>
                </div>
            </div>
        </form>
    </div>
</div>